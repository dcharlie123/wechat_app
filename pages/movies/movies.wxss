@import "/pages/movies/movies-list/movies-list.wxss";
@import "/pages/movies/movies-grid/movies-grid.wxss";
.container{
    background-color: #f2f2f2;
}
.container .movie{
    margin-bottom: 30rpx;
}
.search{
    background-color: #f2f2f2;
    height: 80rpx;
    width:100%;
    display: flex;
    flex-direction: row;
}
.search-img{
    margin: auto 0 auto 20rpx;
}
.placeholder{
    font-size: 14px;
    color:#d1d1d1;
    margin-left: 20rpx;
}
.search input{
    height: 100%;
    width: 600rpx;
    margin-left: 20px;
    font-size: 28rpx;
}
.search-pannel{
    position: absolute;
    top:80rpx;
    width: 100%;
}
.cancel-search{
    height: 30rpx;
    width: 30rpx;
    margin:auto 0 auto 10rpx;
    padding: 20rpx;
}